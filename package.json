{
  "name": "SURef",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "Salvage Union Open Game Licence 1.0b",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run build:package:quick && bun --filter suref-web dev",
    "dev:watch": "bun --filter salvageunion-reference watch & bun --filter suref-web dev",
    "build": "bun run build:package && bun --filter suref-web build",
    "build:package": "bun --filter salvageunion-reference build",
    "build:package:quick": "bun --filter salvageunion-reference build:quick",
    "build:package:watch": "bun --filter salvageunion-reference watch",
    "typecheck": "bun --filter \"*\" typecheck",
    "lint": "bun --filter suref-web lint",
    "lint:all": "bun --filter \"*\" lint",
    "format": "bun --filter suref-web format",
    "format:all": "bun --filter \"*\" format",
    "format:check": "bun --filter suref-web format:check",
    "format:check:all": "bun --filter \"*\" format:check",
    "test": "bun --filter suref-web test",
    "test:all": "bun --filter \"*\" test",
    "sanity": "bun --filter suref-web sanity",
    "sanity:all": "bun --filter \"*\" sanity",
    "publish:package": "bun --filter salvageunion-reference publish"
  },
  "devDependencies": {
    "netlify-cli": "^23.11.0",
    "prettier": "^3.6.2"
  }
}
