{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "tools",
    "**/*.test.ts",
    "**/*.template.ts"
  ]
}
