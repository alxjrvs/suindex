{
  "name": "salvageunion-reference",
  "version": "2.1.2",
  "description": "Comprehensive, schema-validated JSON dataset and TypeScript ORM for the Salvage Union tabletop RPG",
  "type": "module",
  "main": "./lib/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./lib/index.ts",
      "default": "./dist/index.js"
    },
    "./data/*": "./data/*",
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist",
    "lib",
    "data",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && bun test && bun run docs && bun run generate && tsc --project tsconfig.build.json && bun run format && bun run lint",
    "build:quick": "bun run generate && tsc --project tsconfig.build.json",
    "prepare": "bun run generate && tsc --project tsconfig.build.json",
    "prepublishOnly": "bun run build && bun run typecheck",
    "validate:ids": "tsx tools/checkUniqueIds.ts",
    "fix:ids": "tsx tools/generateMissingIds.ts",
    "docs": "tsx tools/generateDocs.ts",
    "docs:schemas": "tsx tools/generateSchemaDocs.ts",
    "generate:enums": "tsx tools/generateEnumTypes.ts",
    "generate:common": "tsx tools/generateCommonTypes.ts",
    "generate:objects": "tsx tools/generateObjectTypes.ts",
    "generate:schemas": "tsx tools/generateSchemaTypes.ts",
    "generate:utilities": "tsx tools/generateUtilities.ts",
    "generate:types": "npm-run-all --parallel generate:enums generate:common generate:objects generate:schemas",
    "generate:index": "tsx tools/generateIndexFile.ts",
    "generate": "bun run generate:types && bun run generate:index && bun run generate:utilities",
    "validate:generated": "tsx tools/validateGenerated.ts",
    "validate:references": "tsx tools/validateReferences.ts",
    "typecheck": "tsc --project tsconfig.build.json --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint .",
    "sanity": "bun run lint -- --fix && bun run format && bun run typecheck",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alxjrvs/salvageunion-data.git"
  },
  "keywords": [
    "salvage-union",
    "tabletop-rpg",
    "ttrpg",
    "game-data",
    "json-schema",
    "leyline-press",
    "orm",
    "typescript",
    "mech",
    "post-apocalyptic"
  ],
  "author": "Alex Jarvis",
  "license": "Salvage Union Open Game Licence 1.0b",
  "bugs": {
    "url": "https://github.com/alxjrvs/salvageunion-data/issues"
  },
  "homepage": "https://github.com/alxjrvs/salvageunion-data#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bun-types": "^1.3.2",
    "eslint": "^9.39.1",
    "json-schema-to-typescript": "^15.0.4",
    "jsonschema": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
