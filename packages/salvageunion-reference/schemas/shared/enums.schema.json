{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "$id": "https://salvageunion.com/schemas/shared/enums.schema.json",
  "title": "Salvage Union Enumerations",
  "description": "Shared enumeration definitions for Salvage Union game data",
  "definitions": {
    "source": {
      "type": "string",
      "enum": ["Salvage Union Workshop Manual", "Mech Monday"],
      "description": "The source book or expansion for this content"
    },
    "contentType": {
      "type": "string",
      "enum": ["paragraph", "heading", "list-item", "label", "datavalues"],
      "description": "Type of content block for rendering structured text"
    },
    "range": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Close", "Medium", "Long", "Far"]
      },
      "minItems": 1,
      "description": "Range bands for abilities and weapons"
    },
    "actionType": {
      "type": "string",
      "enum": ["Passive", "Free", "Reaction", "Turn", "Short", "Long", "DownTime"],
      "description": "Type of action required to use an ability"
    },
    "damageType": {
      "type": "string",
      "enum": ["HP", "SP"],
      "description": "Type of damage"
    },
    "classType": {
      "type": "string",
      "enum": ["Advanced", "Hybrid"],
      "description": "Type of advanced class"
    },
    "tree": {
      "type": "string",
      "enum": [
        "Advanced Engineer",
        "Advanced Hacking",
        "Advanced Hauler",
        "Advanced Scout",
        "Advanced Soldier",
        "Augmentation",
        "Cyborg",
        "Electronics",
        "Fabricator",
        "Forging",
        "Generic",
        "Gladitorial Combat",
        "Hacking",
        "Leadership",
        "Legendary Cyborg",
        "Legendary Engineer",
        "Legendary Fabricator",
        "Legendary Hacker",
        "Legendary Hauler",
        "Legendary Ranger",
        "Legendary Scout",
        "Legendary Smuggler",
        "Legendary Soldier",
        "Legendary Union Rep",
        "Mech-Tech",
        "Mechanical Knowledge",
        "Ranger",
        "Recon",
        "Salvaging",
        "Sleuth",
        "Smuggler",
        "Sniper",
        "Survivalist",
        "Tactical Warfare",
        "Trading",
        "Union Rep"
      ],
      "description": "Ability tree name"
    },
    "schemaName": {
      "type": "string",
      "enum": [
        "abilities",
        "ability-tree-requirements",
        "bio-titans",
        "chassis",
        "classes.advanced",
        "classes.core",
        "crawler-bays",
        "crawler-tech-levels",
        "crawlers",
        "creatures",
        "distances",
        "drones",
        "equipment",
        "keywords",
        "meld",
        "modules",
        "npcs",
        "roll-tables",
        "squads",
        "systems",
        "traits",
        "vehicles"
      ],
      "description": "Name of the schema"
    }
  }
}
